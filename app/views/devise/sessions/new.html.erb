
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div><%= f.text_field :username, :autofocus => true, :placeholder => 'Username', :class => "align-c" %></div>

  <div><%= f.password_field :password, :placeholder => 'Password', :class => "align-c" %></div>

  <div><%= f.submit "Sign in" %></div>
<% end %>
