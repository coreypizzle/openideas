<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :class => 'user-form-inner', :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true. :class => 'user-form-inner', :placeholder => 'E-Mail' %></div>

  <div><%= f.submit "Send me reset password instructions" %></div>
<% end %>
